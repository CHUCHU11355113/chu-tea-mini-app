# CHU TEA Mini App - 生产环境配置模板
# 请复制此文件为 .env 并填写所有必需的配置

# ==================== 数据库配置 ====================
# MySQL数据库连接字符串
DATABASE_URL="mysql://username:password@localhost:3306/chu_tea_db"

# ==================== 安全配置 ====================
# JWT密钥 (请生成一个安全的随机字符串)
# 生成方法: openssl rand -hex 32
JWT_SECRET="your-secure-jwt-secret-here"

# ==================== Telegram配置 ====================
# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN="your_bot_token_here"

# Telegram Mini App URL (您的域名)
TELEGRAM_MINI_APP_URL="https://your-domain.com"

# Telegram Webhook密钥 (用于验证Webhook请求)
# 生成方法: openssl rand -hex 32
TELEGRAM_WEBHOOK_SECRET="your-webhook-secret-here"

# ==================== 云存储配置 (可选) ====================
# AWS S3配置 (用于图片上传)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET=""

# ==================== 支付配置 ====================
# YooKassa支付配置
YOOKASSA_SHOP_ID=""
YOOKASSA_SECRET_KEY=""

# ==================== IIKO POS配置 ====================
# IIKO API配置
IIKO_API_URL="https://api-ru.iiko.services"
IIKO_API_LOGIN=""
IIKO_API_PASSWORD=""

# ==================== 物流配置 ====================
# Yandex.Delivery配置
YANDEX_DELIVERY_API_KEY=""
YANDEX_DELIVERY_CLIENT_ID=""

# ==================== 服务器配置 ====================
# 服务器端口
PORT=3000

# 运行环境
NODE_ENV=production

# 是否使用模拟服务 (生产环境应设置为 false)
USE_MOCK_SERVICES=false

# ==================== OAuth配置 (可选) ====================
# OAuth服务器URL
OAUTH_SERVER_URL=""
